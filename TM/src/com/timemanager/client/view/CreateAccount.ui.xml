<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainpanel {
		margin-top: 150px;
		background: white;
		align:
		center;
		margin-left: 250px;
		margin-right: 250px;
		border: 1px solid
		#e4e9eb;
		}
		.label {
		font-size: 20pt;
		font-weight: bold;
		}
	</ui:style>

	<g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
		<g:cell>
			<g:HTMLPanel>
				<table style="margin-top:20px;width:100%;height:100%;">
					<tr>
						<td align="center" valign="bottom">
							<g:Label text="Time Tracker" addStyleNames="{style.label}" />
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:cell>
		<g:cell>
			<g:DecoratorPanel addStyleNames="{style.mainpanel}">
				<g:VerticalPanel width="300px" height="200px"
					horizontalAlignment="ALIGN_CENTER">

					<g:cell>
						<g:HTMLPanel>
							<table style="margin-top:15px">
								<tr>
									<td>
										<g:Label text="Create Account" />
									</td>
								</tr>
							</table>
							<table>
								<tr>
									<td>
										<g:Label text="Email:" />
									</td>
									<td>
										<g:TextBox ui:field="email" focus="true" />
									</td>
									<td>
										<g:CheckBox ui:field='enableDetail'>More</g:CheckBox>
									</td>
								</tr>
							</table>

							<g:DockLayoutPanel ui:field="detailpanel" >
								<g:center><g:HTMLPanel>
								    <table> 
										<tr>
											<td>
												<g:Label text="User Name:" />
											</td>
											<td>
												<g:TextBox ui:field="userName" />
											</td>
										</tr>
										<tr>
											<td>
												<g:Label text="Password:" />
											</td>
											<td>
												<g:TextBox ui:field="passWorld" focus="true" />
											</td>
										</tr>
										<tr>
											<td>
												<g:Label text="Repeat Password:" />
											</td>
											<td>
												<g:TextBox ui:field="repeatPassWorld" focus="true" />
											</td>
										</tr> 
									</table></g:HTMLPanel>
								</g:center>
							</g:DockLayoutPanel>

							<table>
								<tr>
									<td align="center">
										<g:Button ui:field="create">Create</g:Button>
									</td>
								</tr>
							</table>
						</g:HTMLPanel>
					</g:cell>
				</g:VerticalPanel>
			</g:DecoratorPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 