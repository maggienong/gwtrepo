<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		.addTaskPanel {
		margin-top: 100px;
		align: center;
		background: white;
		margin-left: auto;
		margin-right: auto;
		}
		.celltable {
			border: 1px solid #e4e9eb;
			width: 100%
		}
	</ui:style>

	<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
		<g:DecoratorPanel addStyleNames="{style.addTaskPanel}">
			<g:VerticalPanel width="600px" height="250px" horizontalAlignment="ALIGN_CENTER">
				<g:HTMLPanel>
				    
					<table width='100%'>
						<tr>
							<td>
								<g:TextBox ui:field="catField" focus="true" />
							</td>
							<td>
								<g:Button ui:field="addButton">Add</g:Button>
							</td>
							<td>&nbsp;</td>
							<td>
								<g:TextBox ui:field="taskField" focus="true" />
							</td>
							<td>
								<g:Button ui:field="addTaskButton">Add</g:Button>
							</td>
						</tr>
						<tr>
							<td colspan="2"  valign="top">
								<g:HTMLPanel>
									<c:CellTable pageSize='15' ui:field='cellTable'
										addStyleNames="{style.celltable}" />
								</g:HTMLPanel>
							</td>
							<td>&nbsp;</td>
							<td colspan="2"  valign="top">
								<g:HTMLPanel>
									<c:CellTable pageSize='15' ui:field='taskCellTable'
										addStyleNames="{style.celltable}" />
								</g:HTMLPanel>
							</td>
						</tr>
					</table>
				 
				</g:HTMLPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:VerticalPanel>
</ui:UiBinder> 