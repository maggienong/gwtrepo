<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.addTaskPanel {
		 margin-top: 100px;
		 align: center;
		 background: white;
		 margin-left: auto;
		 margin-right: auto;
		} 
	</ui:style>

  <g:DecoratorPanel addStyleNames="{style.addTaskPanel}">
	  <g:VerticalPanel> 
	        <g:Label   text="Task Description"/>
	        <g:TextBox ui:field="taskField" focus="true"/> 
	        <g:Button ui:field="addButton">Add</g:Button>  
	  </g:VerticalPanel>
  </g:DecoratorPanel>
</ui:UiBinder> 