<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		.addTaskPanel {
			margin-top: 100px;
			align: center;
			background: white;
			margin-left: auto;
			margin-right: auto;
		}
	</ui:style>

	<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
		<g:DecoratorPanel addStyleNames="{style.addTaskPanel}">
			<g:VerticalPanel width="300px" height="200px"
				horizontalAlignment="ALIGN_CENTER">
				<g:HTMLPanel>
					<table>
						<tr>
							<td>
								<g:TextBox ui:field="catField" focus="true" />
							</td>
							<td>
								<g:Button ui:field="addButton">Add</g:Button>
							</td>
						</tr>
						<tr>
							<td>
								<g:HTMLPanel>
									<c:CellTable pageSize='15' ui:field='cellTable'/>
								</g:HTMLPanel>
							</td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:VerticalPanel>
		</g:DecoratorPanel>
	</g:VerticalPanel>
</ui:UiBinder> 