<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

    <ui:style>
		.mainpanel {
		 margin-top: 50px; 
		 margin-bottom: 50px;
		 margin-left: 5px;
		 margin-right: 5px;
		 background: white; 
		 border: 1px solid #e4e9eb;
		} 
		
		.pager {
			margin-top: 10px;
		}
		
		.datagrid {
			border: 1px solid #454547;
			margin-left: auto;
		 	margin-right: auto;
		 	background: white; 
		}
		
		.southpanel {
			border: 1px solid #454547;
			margin-top: 10px; 
			margin-left: auto;
		 	margin-right: auto;
		 	vertical-align: top;
		}
	</ui:style>
	
  <g:DockLayoutPanel  unit="PX"  addStyleNames="{style.mainpanel}">
   <g:north size="100">
      <g:HTMLPanel addStyleNames="{style.pager}" >
        <table style="width:100%;height:100%;"   >
          <tr>
            <td align="center"  valign="bottom">
              <c:SimplePager
                ui:field='pager' />
            </td>
          </tr>
        </table> 
      </g:HTMLPanel>
    </g:north>
    <!-- DataGrid. -->
    <g:center>
      <c:DataGrid addStyleNames="{style.datagrid}"
        ui:field='dataGrid' />
    </g:center>

    <!-- Pager. -->
    <g:south size="100"> 
    	<g:HorizontalPanel addStyleNames="{style.southpanel}" >
    	<g:cell>
    		<g:HTMLPanel>
    		<table ><tr>
    	  		<td><g:Button ui:field="addButton">Add</g:Button>  </td>
    	  		<td><g:Button ui:field="deleteButton">Delete</g:Button></td>
    	  		<td><g:Button ui:field="saveButton">Save</g:Button> </td>
    		</tr></table>
    		</g:HTMLPanel>
    	</g:cell>
    	<g:cell>
    		<g:HTMLPanel>
    		<table><tr> 
    	  		<td><d:DateBox ui:field="created"></d:DateBox></td> 
    		</tr></table>
    		</g:HTMLPanel>
    	</g:cell>
    	</g:HorizontalPanel>
    </g:south>
   
  </g:DockLayoutPanel>
</ui:UiBinder>